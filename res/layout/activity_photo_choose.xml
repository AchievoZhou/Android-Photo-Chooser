<com.example.photo_chooser_demo.PhotoChooseView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pho_chs_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <LinearLayout
        android:id="@+id/pho_chs_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/merge_title_view" />

        <GridView
            android:id="@+id/pho_chs_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:horizontalSpacing="3dp"
            android:listSelector="@null"
            android:numColumns="3"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp"
            android:verticalSpacing="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pho_chs_pview_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/pho_chs_pview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_image_default"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pho_chs_shade_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bh_shade_icon"
        android:visibility="gone" >
    </ImageView>

    <LinearLayout
        android:id="@+id/pho_chs_all_nav_ll"
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/pho_chs_all_nav_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/divider_line_color"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@color/transparent"
            android:smoothScrollbar="true" >
        </ListView>
    </LinearLayout>

</com.example.photo_chooser_demo.PhotoChooseView>