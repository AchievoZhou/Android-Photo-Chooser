<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/photoalbum_item_image"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/phchs_allnav_thumbnail_bg"
        android:padding="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/photoalbum_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/photoalbum_item_image"
        android:textColor="@color/xq_text_color1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/photoalbum_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/photoalbum_item_name"
        android:textColor="@color/xq_text_color1"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/photoalbum_item_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/phchs_allnav_checked"
        android:visibility="gone" />

</RelativeLayout>